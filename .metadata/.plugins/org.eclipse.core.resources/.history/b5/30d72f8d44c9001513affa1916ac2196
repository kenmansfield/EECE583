#include <iostream>
#include <fstream>
#include <stdio.h>
#include <vector>
#include <unistd.h>
#include "graphics.h"
#include <string>
#include <sstream>
#include <algorithm>
#include "Assignment2.hpp"
using namespace std;



float sBoxDim = 0;
static const int WIDTH = 1000;

int sNumCells = 0;
int sNumConnection = 0;
int sNumRows = 0;
int sNumColumns = 0;

bool ReadNetFile(string fileName)
{
    ifstream infile;
    infile.open(fileName.c_str());
    int lineNumber = 0;

    vector< vector<int> > vNetFile;

    std::string line;

    if(!infile.is_open())
    {
        return 0;
    }

    int i = 0;
    while( getline(infile, line) )
    {
    	vector<int> tempVec;
        istringstream lineStream(line);
        int x;
        while(lineStream >> x)
        {
        	tempVec.push_back(x);
        }
        vNetFile.push_back(tempVec);
        i++;
    }
    cout << "hello world!!\n";

    for(int i = 0; i < vNetFile.size(); i++)
    {
    	for(int j = 0; j < vNetFile.at(i).size(); j++)
    	{
    		cout << vNetFile.at(i).at(j) << " ";
    	}

    	cout << endl;

    }
    return ParseNetFile(vNetFile);
}

bool ParseNetFile(vector< vector<int> > vNetFile)
{
	sNumCells = vNetFile.at(0).at(0);
	sNumConnection = vNetFile.at(0).at(1);
	sNumRows = vNetFile.at(0).at(2);
	sNumColumns = vNetFile.at(0).at(3);

	vNetFile.erase(vec.begin());
}

void DrawGrid()
{
	int boxSize;
	setfontsize (6);
	setlinestyle (SOLID);
	setlinewidth (2);
	setcolor (BLACK);

	sBoxDim = WIDTH/sNumColumns;

	for(int i = 0; i < sNumColumns; i++)
	{
		for(int j = 0; j < sNumRows; j++)
		{
			drawrect (i*sBoxDim, j*sBoxDim + TOP_EDGE, (i+1)*sBoxDim,( j+1)*sBoxDim + TOP_EDGE);
			flushinput();
		}
	}
	Point x;
}

//Get the location to draw
Vertice GetLocation(Point p)
{
	float yOffset = sBoxDim * (float(p.y - 1));
	Vertice location(float(p.x), float(p.y));

}

}
void InitGraphics()
{
    clearscreen();
    update_message("Simulated Annealing.");
    setcolor (RED);
    setlinewidth(0);
    setlinestyle (DASHED);
    init_world (0.,0.,WIDTH,WIDTH);
}

int main (int argc, char *argv[])
{
	string FileName = "alu2.txt";
	ReadNetFile(FileName);
}

